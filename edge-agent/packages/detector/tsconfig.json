{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "composite": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "types": ["node"]
  },
  "include": [
    "src/index.ts",
    "src/python-detector.ts",
    "src/python-tracker.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../common" }]
}
