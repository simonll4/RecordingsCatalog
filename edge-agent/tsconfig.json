{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@edge-agent/common": ["packages/common/src"],
      "@edge-agent/db": ["packages/db/src"],
      "@edge-agent/detector": ["packages/detector/src"],
      "@edge-agent/capture": ["packages/capture/src"],
      "@edge-agent/agent": ["packages/agent/src"],
      "@edge-agent/cli": ["apps/cli/src"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "ignoreDeprecations": "5.0"
  },
  "references": [
    { "path": "./packages/common" },
    { "path": "./packages/db" },
    { "path": "./packages/detector" },
    { "path": "./packages/capture" },
    { "path": "./packages/agent" },
    { "path": "./apps/cli" }
  ]
}
